<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.camera.any" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Campustrade"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".HistoryActivity"
            android:screenOrientation="portrait"
            android:exported="false"
            android:label="@string/title_activity_history"
            android:theme="@style/Theme.Campustrade" />
        <activity
            android:name=".HomeActivityMVVM"
            android:screenOrientation="portrait"
            android:exported="false"
            android:label="@string/title_activity_home_mvvm"
            android:theme="@style/Theme.Campustrade" />
        <activity
            android:name=".LaunchCameraActivity"
            android:screenOrientation="portrait"
            android:exported="false"
            android:label="@string/title_activity_launch_camera"
            android:theme="@style/Theme.Campustrade" />
        <activity
            android:name=".LaunchCameraProfileActivity"
            android:screenOrientation="portrait"
            android:exported="false"
            android:label="@string/title_activity_launch_camera"
            android:theme="@style/Theme.Campustrade" />
        <activity
            android:name=".PublishActivity"
            android:screenOrientation="portrait"
            android:exported="false"
            android:label="@string/title_activity_publish"
            android:theme="@style/Theme.Campustrade" />
        <activity
            android:name=".TransactionsActivity"
            android:screenOrientation="portrait"
            android:exported="false"
            android:label="@string/title_activity_transactions"
            android:theme="@style/Theme.Campustrade" />
        <activity
            android:name=".HomeActivity"
            android:screenOrientation="portrait"
            android:exported="false"
            android:label="@string/title_activity_home"
            android:theme="@style/Theme.Campustrade" />
        <activity
            android:name=".SignUpScreen"
            android:screenOrientation="portrait"
            android:exported="false"
            android:label="@string/title_activity_sign_up"
            android:theme="@style/Theme.Campustrade" />
        <activity
            android:name=".LoginScreen"
            android:screenOrientation="portrait"
            android:exported="false"
            android:label="@string/title_activity_log_in"
            android:theme="@style/Theme.Campustrade" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Campustrade">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>